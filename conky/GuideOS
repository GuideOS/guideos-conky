conky.text = [[
${image /usr/lib/guideos-conky/images/guideos.png -p 250,10 -s 40x40}


${nodename} ${alignr}${execi 3600 cat /etc/guideos-version} 

${exec grep 'model name' /proc/cpuinfo | head -n 1 | cut -c14-30} ${execpi 3600 python3 /usr/lib/guideos-conky/hwinfo.py cpu} ${alignr} CPU

${execpi 3600 python3 /usr/lib/guideos-conky/hwinfo.py ram} ${alignr} RAM

${execpi 3600 python3 /usr/lib/guideos-conky/hwinfo.py disk} ${alignr} Disk

${execpi 3600 python3 /usr/lib/guideos-conky/hwinfo.py gpu} ${alignr} GPU

${execpi 3600 python3 /usr/lib/guideos-conky/hwinfo.py net} ${alignr} Netz

${kernel} ${alignr} Kernel

${uptime_short} ${alignr} Laufzeit

${execi 3600 python3 /usr/lib/guideos-conky/check-update.py} ${alignr} Updates

]]

